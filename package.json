{
  "name": "ispoofermotion",
  "version": "1.0.1",
  "main": "main.js",
  "description": "Animation spoofing utility for Roblox",
  "author": "IncredibroXP",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^36.2.1",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "form-data": "^4.0.2",
    "keytar": "^7.9.0",
    "roblox-animation-transfer": "^1.3.0"
  },
  "build": {
    "appId": "com.github.IncrediDev.ISpooferMotion",
    "productName": "ISpooferMotion",
    "files": [
      "**/*",
      "!downloads/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/app_icon.ico"
    },
    "mac": {
      "target": "dmg"
    }
  }
}
