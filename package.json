{
  "name": "ispoofermotion",
  "version": "1.2.7",
  "main": "main.js",
  "description": "Animation spoofing utility for Roblox",
  "author": "IncredibroXP",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^36.2.1",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "form-data": "^4.0.2",
    "keytar": "^7.9.0",
    "roblox-animation-transfer": "^1.3.0"
  },
  "build": {
    "appId": "com.github.IncrediDev.ISpooferMotion",
    "productName": "ISpooferMotion",
    "files": [
      "**/*",
      "!downloads/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/app_icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/app_icon.png",
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
